@page
@model ResourceAssignAdmin.Pages.Plan.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PlanSubscription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="PlanSubscription.Id" class="control-label"></label>
                <input asp-for="PlanSubscription.Id" class="form-control" />
                <span asp-validation-for="PlanSubscription.Id" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PlanSubscription.Name" class="control-label"></label>
                <input asp-for="PlanSubscription.Name" class="form-control" />
                <span asp-validation-for="PlanSubscription.Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PlanSubscription.Price" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input asp-for="PlanSubscription.Price" class="form-control" />
                </div>
                <span asp-validation-for="PlanSubscription.Price" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PlanSubscription.Duration" class="control-label">Duration (Let it empty for Unlimited)</label>
                <div class="input-group">
                    <input asp-for="PlanSubscription.Duration" class="form-control" />
                    <div class="input-group-prepend">
                        <span class="input-group-text">Months</span>
                    </div>
                </div>
                <span asp-validation-for="PlanSubscription.Duration" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
